if [ "$1" = "show" ]; then
 print 33 "[ Trash content ]"
 for i in $(ls /trash); do
  if [ -d /trash/$i ]; then
   print 32 $i
  else
   print 34 $i
  fi
 done
else
 if [ "$1" = "clear" ]; then
  if [ -d /trash/$i ]; then
   print 32 $i
  else
   print 34 $i
  fi
  print 31 You really want to clear trash? 
  rnd="$RANDOM"
  print 35 Type $rnd to delete.
  read res
  if [ "$res" = "$rnd" ]; then
   print 31 "[ Clearing trash... ]"
   rm -rf /trash
   mkdir /trash
  else
   print 33 Incorrect code. action aborted. 
  fi
 else
  print 32 'invalid option, use "show" or "clear"'
 fi
fi

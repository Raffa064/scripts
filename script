clear
if [ "$1" == "list" ]; then
 echo SCRIPTS:
 for i in $(ls /scripts); do
  echo $i
 done
else
 if [ "$1" == "remove" ]; then
  echo "Deleting $2..."
  del "/scripts/$2"
 else
  if [ "$1" == "rename" ]; then
   echo "Renaming $2 into $3..."
   mv "/scripts/$2" "/scripts/$3"
   alias $2="source /scripts/runscript $3"
   alias $3="source /scripts/runscript $3"
  else
   path="/scripts/$1"
   nano -Y sh $path -l
   alias $1="source $path"
   backup
  fi
 fi
fi
